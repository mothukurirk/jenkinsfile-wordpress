pipeline {
    agent any

    stages {
        stage('Validate Template') {
            steps {
                sh '''
                    echo "Validating WordPress CloudFormation template..."
                    aws cloudformation validate-template --template-body file://wordpress_single_instance.yml
                '''
            }
        }

        stage('Deploy WordPress Stack') {
            steps {
                sh '''
                    echo "Deploying WordPress CloudFormation stack..."
                    aws cloudformation deploy \
                        --stack-name WordPressStack \
                        --template-file wordpress_single_instance.yml \
                        --region us-east-1 \
                        --capabilities CAPABILITY_NAMED_IAM \
                        --parameter-overrides KeyName=mykeypair

                    echo "‚úÖ WordPress stack deployed successfully!"
                '''
            }
        }
    }

    post {
        success {
            echo "üéØ Pipeline completed successfully."
        }
        failure {
            echo "‚ùå Deployment failed. Check CloudFormation logs."
        }
    }
}
